model CmsGalleryItem {
  id        String      @id @default(cuid())
  galleryId String
  mediaId   String
  caption   String?
  itemOrder Int         @default(0)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  gallery   CmsGallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  media     CmsMedia    @relation("CmsGalleryItemMedia", fields: [mediaId], references: [id], onDelete: Restrict)

  @@index([galleryId, itemOrder], map: "cms_gallery_item_gallery_itemOrder_idx")
  @@index([mediaId], map: "cms_gallery_item_mediaId_fkey")
