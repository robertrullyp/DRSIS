enum CmsStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

enum CmsPostType {
  NEWS
  ARTICLE
  ANNOUNCEMENT
}

enum CmsMenuItemType {
  INTERNAL
  EXTERNAL
  PAGE
  CATEGORY
  TAG
}

model CmsMenu {
  id          String       @id @default(cuid())
  name        String       @unique
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  items       CmsMenuItem[]

  @@map("cms_menu")
}

model CmsPage {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  content     String       @db.LongText
  excerpt     String?
  status      CmsStatus    @default(DRAFT)
  publishedAt DateTime?
  createdBy   String?
  updatedBy   String?
  publishedBy String?
  deletedAt   DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  menuItems   CmsMenuItem[]

  @@index([status, publishedAt], map: "cms_page_status_publishedAt_idx")
  @@map("cms_page")
}

model CmsMenuItem {
  id        String          @id @default(cuid())
  menuId    String
  parentId  String?
  label     String
  type      CmsMenuItemType @default(INTERNAL)
  href      String?
  pageId    String?
  order     Int             @default(0)
  isActive  Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  menu      CmsMenu         @relation(fields: [menuId], references: [id], onDelete: Cascade)
  page      CmsPage?        @relation(fields: [pageId], references: [id], onDelete: SetNull)
  parent    CmsMenuItem?    @relation("CmsMenuTree", fields: [parentId], references: [id], onDelete: SetNull)
  children  CmsMenuItem[]   @relation("CmsMenuTree")

  @@index([menuId, parentId, order], map: "cms_menu_item_menu_parent_order_idx")
  @@index([pageId], map: "cms_menu_item_pageId_fkey")
  @@map("cms_menu_item")
}

model CmsPost {
  id          String      @id @default(cuid())
  type        CmsPostType @default(NEWS)
  title       String
  slug        String      @unique
  excerpt     String?
  content     String      @db.LongText
  coverMediaId String?
  authorId    String?
  createdBy   String?
  updatedBy   String?
  publishedBy String?
  status      CmsStatus   @default(DRAFT)
  publishedAt DateTime?
  deletedAt   DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  coverMedia  CmsMedia?   @relation("CmsPostCoverMedia", fields: [coverMediaId], references: [id], onDelete: SetNull)
  categories  CmsPostCategory[]
  tags        CmsPostTag[]

  @@index([type, status, publishedAt], map: "cms_post_type_status_publishedAt_idx")
  @@index([status, publishedAt], map: "cms_post_status_publishedAt_idx")
  @@index([coverMediaId], map: "cms_post_coverMediaId_fkey")
  @@map("cms_post")
}

model CmsMedia {
  id        String    @id @default(cuid())
  key       String    @unique
  filename  String    @default("")
  url       String?
  mime      String
  size      Int
  width     Int?
  height    Int?
  alt       String?
  title     String?
  module    String?
  createdBy String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  posts     CmsPost[] @relation("CmsPostCoverMedia")
  galleryCoverOf CmsGallery[] @relation("CmsGalleryCoverMedia")
  galleryItems   CmsGalleryItem[] @relation("CmsGalleryItemMedia")
  eventCoverOf   CmsEvent[] @relation("CmsEventCoverMedia")

  @@index([module, createdAt], map: "cms_media_module_createdAt_idx")
  @@map("cms_media")
}

model CmsCategory {
  id        String            @id @default(cuid())
  name      String
  slug      String            @unique
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  posts     CmsPostCategory[]

  @@map("cms_category")
}

model CmsTag {
  id        String       @id @default(cuid())
  name      String
  slug      String       @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  posts     CmsPostTag[]

  @@map("cms_tag")
}

model CmsPostCategory {
  postId     String
  categoryId String
  post       CmsPost     @relation(fields: [postId], references: [id], onDelete: Cascade)
  category   CmsCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([postId, categoryId])
  @@index([categoryId], map: "cms_post_category_categoryId_fkey")
  @@map("cms_post_category")
}

model CmsPostTag {
  postId String
  tagId  String
  post   CmsPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag    CmsTag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@index([tagId], map: "cms_post_tag_tagId_fkey")
  @@map("cms_post_tag")
}

model CmsEvent {
  id          String    @id @default(cuid())
